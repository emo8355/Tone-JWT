<div class="row justify-content-md-center" style="margin-top: 30px">
	<div class="col-md-7">
		<div class="jumbotron">
			<h1>welcom to tone analyser</h1>
		</div>
		{{#if message}}
		<div class="alert {{messageClass}}" style="{{inline_style}}" role="alert">
			{{message}}
		</div>
		{{/if}}

		<form method="POST" action="/users/index">
			<div class="form-group">
				<label for="inputtext">text: </label>
				<input id="inputtext" name="inputtext" type="text" class="form-control" placeholder="Enter a text"
					required />
			</div>
			<button type="submit" class="btn btn-primary">submit</button>
			<a href="/logout" class="btn btn-primary"> log out</a>
		</form>
		{{#if text}}
		<div class="alert {{textClass}}" style="{{inline_style}}" role="alert">
			{{ text}}
		</div>
		{{/if}}
	</div>
</div>